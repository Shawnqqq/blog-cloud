.header{
  display: flex;
  justify-content: space-between;
  margin: 30rpx;
}
.cancel{
  font-size: 33rpx;
}
.push{
  font-size: 33rpx;
  width: 110rpx;
  height: 60rpx;
  background-color: #3CB371;
  border-radius: 6rpx;
  color: #fff;
  text-align: center;
  line-height: 60rpx;
}
.text{
  box-sizing: border-box;
  margin: 40rpx 80rpx;
  font-size: 26rpx;
  min-height: 20vh;
}
.resource{
  display: flex;
  margin: 20rpx 80rpx;
}
.resource-add{
  width: 200rpx;
  height: 200rpx;
  background-color: #F5F5F5;
  position: relative;
}
.resource-image{
  width: 200rpx;
  height: 200rpx;
}
.resource-add:before{
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  width: 4rpx;
  height: 30%;
  background-color: #a9a9a9;
}
.resource-add:after{
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  width: 30%;
  height: 4rpx;
  background-color: #a9a9a9;
}