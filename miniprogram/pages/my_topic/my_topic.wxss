.container{
  min-height: 100vh;
}
.topic-list{
  display: flex;
  flex-direction: column;
}
.topic-item{
  border-bottom: 1rpx solid rgba(153, 153, 153, 0.5);
  padding: 30rpx;
  display: flex;
}
.topic-avatar{
  width: 85rpx;
  height: 85rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}
.topic-body{
  width: 80%;
}
.topic-name{
  font-size: 28rpx;
  color: #4682B4;
  line-height: 2;
}
.topic-content{
  width: 100%;
}
.topic-text{
  font-size: 26rpx;
  color: #333;
  line-height: 1;
  margin-bottom: 20rpx;
}
.topic-resourcesr{
  width: 250rpx;
  height: 250rpx;
  margin: 20rpx 20rpx 0 0;
}
.topic-time{
  margin-top: 30rpx;
  font-size: 18rpx;
  color: #999;
}