.container{
  position: relative;
}
.topic-container{
  display: flex;
  flex-direction: column;
  padding: 30rpx;
  border-bottom: 1rpx solid rgba(153, 153, 153, 0.5);
}
.topic-header{
  display: flex;
}
.topic-avatar{
  width: 85rpx;
  height: 85rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}
.topic-user{
  font-size: 26rpx;
  color: #4682B4;
  margin-top: 10rpx;
}
.topic-time{
  font-size: 18rpx;
  color: #999;
  margin-top: 15rpx;
}
.topic-content{
  width: 100%;
  margin: 30rpx 0;
}
.topic-text{
  font-size: 26rpx;
  color: #333;
  line-height: 1;
  margin-bottom: 20rpx;
}
.topic-resources{
  width: 650rpx;
  height: 650rpx;
  margin: 0 auto;
}
.reply-container{
  margin-bottom: 80rpx;
}
.reply-list{
  padding: 20rpx;
  display: flex;
  background-color: rgba(153, 153, 153, 0.1);
  border-bottom: 1rpx solid rgba(153, 153, 153, 0.5);
}
.reply-avatar{
  width: 75rpx;
  height: 75rpx;
  border-radius: 5rpx;
  margin-right: 20rpx;
}
.reply-body{
  width: 80%;
}
.reply-name{
  font-size: 24rpx;
  color: #4682B4;
  line-height: 2;
}
.reply-content{
  width: 100%;
}
.reply-text{
  font-size: 22rpx;
  color: #555;
  line-height: 1;
  margin-bottom: 20rpx;
}
.reply-time{
  margin-top: 30rpx;
  font-size: 18rpx;
  color: #999;
}
.input-container{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 80rpx;
  background-color: rgba(153, 153, 153, 0.9);
}
.reply-input{
  width: 85%;
  height: 55rpx;
  margin: 15rpx auto;
  background:#F5F5F5;
  border: 1rpx solid #fff;
  border-radius: 10rpx;
  font-size: 18rpx;
  color: #000;
  padding-left: 15rpx;
  box-sizing: border-box;
}
.login-container{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 80rpx;
  background-color: #4169E1;
  border-radius: none;
  font-size: 36rpx;
  color: #fff;
  text-align: center;
  line-height: 80rpx;
  letter-spacing: 5rpx;
}
.login-hover{
  background-color: #6A5ACD;
}
